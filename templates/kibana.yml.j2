# Description:
# Default Kibana configuration for Open Distro.

elasticsearch.hosts: http://{{ hostvars['elk1']['ansible_facts']['default_ipv4']['address'] }}:9200
elasticsearch.ssl.verificationMode: none
elasticsearch.username: {{ ElasticsearchKibanaUsername }}
